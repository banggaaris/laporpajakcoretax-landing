---
const logos = [
  { name: 'QRIS', url: '/QRIS_Logo.svg' },
  { name: 'GoPay', url: '/Gopay_logo.png' },
  { name: 'OVO', url: '/Logo_ovo_purple.png' },
  { name: 'ShopeePay', url: '/shopee-pay.svg' }
];
---

<div class="bg-white border-y border-gray-100 py-10">
  <div class="max-w-7xl mx-auto px-4">
    <p class="text-center text-sm font-semibold text-gray-400 uppercase tracking-widest mb-8">Metode Pembayaran Aman & Terpercaya</p>
    <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16 opacity-50 grayscale hover:grayscale-0 transition-all">
      {logos.map(logo => (
        <img src={logo.url} alt={logo.name} class="h-6 md:h-8 object-contain" loading="lazy" />
      ))}
    </div>
  </div>
</div>
